# OpenCode Configuration
OPENCODE_API_KEY=your_opencode_api_key_here
OPENCODE_API_URL=https://api.opencode.dev

# Database Configuration
DATABASE_URL=postgresql://admin:password@localhost:5432/virtual_agents
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=virtual_agents
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
PORT=8000
DASHBOARD_PORT=3000
ORCHESTRATOR_PORT=9000
API_URL=http://localhost:8000
DASHBOARD_URL=http://localhost:3000
WS_URL=ws://localhost:9000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here_minimum_32_characters

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=your_org_or_username
GITHUB_REPO_NAME=virtual-agents-project
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/XXX/XXX
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CHANNEL_ID=C1234567890

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@virtual-agents.dev
SMTP_NAME=Virtual Agents

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_PASSWORD=admin

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=your_session_secret_here_minimum_32_characters
SESSION_MAX_AGE=86400000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Agent Configuration
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048
AGENT_TIMEOUT=30000

# Workflow Configuration
WORKFLOW_TIMEOUT=300000
MAX_CONCURRENT_WORKFLOWS=10

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Feature Flags
ENABLE_DAILY_STUP=true
ENABLE_SPRINT_PLANNING=true
ENABLE_AUTOMATED_REPORTING=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_SLACK_NOTIFICATIONS=false
